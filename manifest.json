{
  "manifest_version": 3,
  "name": "EA FC Evolution Builder",
  "version": "1.0.0",
  "description": "Extract player stats and evolutions from Futbin to build optimal evolution chains",
  "permissions": [
    "storage",
    "activeTab",
    "scripting"
  ],
  "host_permissions": [
    "https://www.futbin.com/*",
    "https://futbin.com/*",
    "http://www.futbin.com/*",
    "http://futbin.com/*"
  ],
  "action": {
    "default_popup": "popup.html"
  },
  "background": {
    "service_worker": "background.js"
  },
  "content_scripts": [
    {
      "matches": ["*://www.futbin.com/*", "*://futbin.com/*"],
      "js": ["content.js"],
      "run_at": "document_idle"
    }
  ]
}
